<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.explorehub.explorehub.UpdateBlogController"
      prefWidth="400.0"
      prefHeight="300.0"
      spacing="10"
      alignment="CENTER">

    <Label text="Update Blog" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Title:"/>
        <TextField fx:id="titleField"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Cover Image URL:"/>
        <TextField fx:id="coverField"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Author:"/>
        <TextField fx:id="authorField"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Content:"/>
        <TextArea fx:id="contentArea" prefWidth="200.0" prefHeight="150.0"/>
    </HBox>

    <Button fx:id="updateButton" text="Update" style="-fx-background-color: blue; -fx-text-fill: white;"/>

</VBox>
